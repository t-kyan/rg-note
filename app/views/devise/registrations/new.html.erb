<%= form_with model: @user, url:user_registration_path , class: 'registration-main', local: true do |f| %>

<div class="form-wrapper">
  <%= render 'devise/shared/error_messages', model: f.object %>
  <h1>Sign Up</h1>
  <div class="form-item">
    <label for="store-name"></label>
    <%= f.text_field :store_name, id:"store-name", placeholder:"店舗名" %>
  </div>
  <div class="form-item">
    <label for="manager"></label>
    <%= f.text_field :manager, id:"manager", placeholder:"店長" %>
  </div>
  <div class="form-item">
    <label for="email"></label>
    <%= f.email_field :email, id:"email", placeholder:"Email" %>
  </div>
  <div class="form-item">
    <label for="password"></label>
    <%= f.password_field :password, id:"password", placeholder:"Password" %>
  </div>
  <div class="form-item">
    <label for="password-confirmation"></label>
    <%= f.password_field :password_confirmation, id:"password_confirmation", placeholder:"同じPasswordを入力してください" %>
  </div>
  <div class="button-panel">
    <%= f.submit "新規登録", class:"button" %>
  </div>
  <div class="form-footer">
    <%= link_to "ログインはこちら", new_user_session_path, class: "form-footer-link" %>
  </div>
</div>
<% end %>
